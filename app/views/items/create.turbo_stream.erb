

<!--
Ele injeta (append) o novo item no elemento da pagina que tem o id "todo-items", renderizando o partial _item.html.erb com o item recem criado.
Ou seja, ao criar um item, ele sera automaticamente adicionado a lista na tela sem reload.
-->
<%= turbo_stream.append("todo-items" , partial: "lists/item" , locals: {item: @item})%>



<!--
Limpa o formuulario apos o usuario digitar o item adicionado
-->
<%= turbo_stream.update(:new_item , partial: "form" , locals: {item: @list.items.new})%>
 
