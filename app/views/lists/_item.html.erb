<!-- Para evitar duplicacao de codigo ja que vai ser chamado para renderizar os itens 
ja criados e os itens que estao sendo criados
-->
<div class="p-3 rounded-lg bg-[#2E1463] text-[#FF490D] mt-3 
 flex justify-between items-center <%= 'line-through opacity-50' if item.concluido %>"
 id="<%=dom_id(item)%>" >

 <span>  <%= item.nome  %></span>
 <!-- Adicionando uma div para conter o checkbox , botao de excluir e editar -->
   <div class="flex items-center gap-2">
    <!-- Checkbox -->
    <%= check_box_tag "concluido", "1", item.concluido,
      class: "w-7 h-5 accent-[#E2E639]",
      data: {
        controller: "checkbox",
        action: "change->checkbox#update",
        checkbox_url_value: url_for([item.list, item])
      } %>


   <!-- Botao para deletar -->
  <%= button_to "❌", list_item_path(item.list, item),
   method: :delete, 
   form: { 
    data: { turbo_confirm: "Tem certeza que deseja remover esta tarefa?" } },
    class: "text-red-500" %>


  <!-- Botao para editar o nome -->
  
  </div>
   
</div>

