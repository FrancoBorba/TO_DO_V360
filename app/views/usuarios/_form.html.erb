<%= form_with(model: usuario, local: true, class: "contents") do |form| %>
  <% if usuario.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(usuario.errors.count, "erro") %> impedem este usuário de ser salvo</h2>

      <ul class="list-disc ml-6">
        <% usuario.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :nome, "Nome" %>
    <%= form.text_field :nome, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": usuario.errors[:nome].none?, "border-red-400 focus:outline-red-600": usuario.errors[:nome].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :email, "Email" %>
    <%= form.text_field :email, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": usuario.errors[:email].none?, "border-red-400 focus:outline-red-600": usuario.errors[:email].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :password, "Senha" %>
    <%= form.password_field :password, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": usuario.errors[:password].none?, "border-red-400 focus:outline-red-600": usuario.errors[:password].any?}] %>
  </div>

  <div class="inline">
    <%= estiloBotaoSubmit "Criar Usuário" %>
  </div>
<% end %>
